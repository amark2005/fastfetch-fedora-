{
  // --- Core ---
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.65,
  "terminal.integrated.defaultProfile.osx": "zsh",

  // --- Cursor (buttery smooth) ---
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,

  // --- UI Minimalism ---
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "window.menuBarVisibility": "compact",

  // --- Theme & Icons ---
  "workbench.colorTheme": "Dobri Next -A00- Black",
  "workbench.iconTheme": "dobri-simple-icons",

  // --- Git ---
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  // --- Focus Mode ---
  "zenMode.centerLayout": true,
  "zenMode.hideStatusBar": false,

  // --- Profiles ---
  "workbench.settings.applyToAllProfiles": [
    "editor.fontFamily",
    "editor.fontLigatures"
  ],
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "zenMode.showTabs": "single",
  "vsicons.dontShowNewVersionMessage": true,
  "chat.viewSessions.enabled": false,
  "chat.viewWelcome.enabled": false,
  "editor.wordWrap": "on",

  // --- Markdown Specific ---
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "markdown.extension.toc.updateOnSave": true,
  "editor.rulers": [
    80,
    120
  ],
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",
  "terminal.external.linuxExec": "ghostty",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "/usr/bin/zsh"
    },
    "fish": {
      "path": "fish"
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "rust-analyzer.enable": false,
  "gitlens.ai.model": "gemini:gemini-3-pro-preview",
  "code-runner.runInTerminal": true,



}